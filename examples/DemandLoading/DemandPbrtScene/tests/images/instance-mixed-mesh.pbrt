LookAt  0       0       -3
        0       0       0
        0       1       0
Camera "perspective"
        "float fov" [ 60 ]

Sampler "halton"
    "integer pixelsamples" 16
Integrator "path"
Film "image"
    "string filename" "instance-cube.png"
    "integer xresolution" [640]
    "integer yresolution" [480]

#############################################
WorldBegin

    Include "light-sources.pbrt"

    ObjectBegin "shapes"
        Include "cube-geom.pbrt"
        "rgb Kd" [ 0 0 1 ]  # blue

        Translate 1 1 0
        Shape "plymesh"
            "string filename" "cube.ply" 
        "rgb Kd" [ 1 0 0 ]  # red
    ObjectEnd

    AttributeBegin
        Translate -0.5 -0.5 0
        ObjectInstance "shapes"
    AttributeEnd
WorldEnd
